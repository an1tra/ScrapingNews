  <div class="articleTitle rounded">
    <a class="anchorlink" href="{{link}}" target="_blank" rel="noopener noreferrer">
      <h1>{{title}}</h1>
    </a>
    <a class="btn btn-xs btn-warning btn.save" href="/api/title/:id" role="button" style="float:right; position:relative; bottom: 50px;">Save Article</a>
    
  </div>
  <div class="blurb rounded">
    <p>{{blurb}}</p>
  </div>
  </div>
